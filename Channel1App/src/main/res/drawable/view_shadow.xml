<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>

        <!-- android:left="3dp"距离左边距，类似layout_marginLeft.rigth,top,bottom都一样
            这里的阴影效果其实就是两张背景图片叠加，第二个item会覆盖第一个item
         -->

        <!-- 背景1 -->
        <item
            android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp"><shape>

            <!-- 填充颜色，即阴影部颜色 -->
            <solid android:color="#80000000" />

            <!-- 圆角角度 -->
            <corners android:radius="8dip" />
        </shape>

        </item>


    </layer-list>

    </item>

</selector>